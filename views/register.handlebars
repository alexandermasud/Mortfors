<div class="container animated fadeIn">

<h2 class="page-header">Registrera</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger animated fadeIn">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register" class="animated fadeIn">
    
    <div class="row">
    <div class="col-lg-3"></div>
    
   <div class="form-group col-lg-3">
    <label>Förnamn</label>
    <input type="text" class="form-control" placeholder="Förnamn" name="firstname" required>
  </div>
    <div class="form-group col-lg-3">
    <label>Efternamn</label>
    <input type="text" class="form-control" placeholder="Efternamn" name="lastname" required>
  </div>
    
    <div class="col-lg-3"></div>
        
    </div>
    <div class="row">
    
      <div class="col-lg-3"></div>
    
    <div class="form-group col-lg-3">
    <label>Address</label>
    <input type="text" class="form-control" placeholder="Address" name="address" required>
  </div>
    <div class="form-group col-lg-3">
    <label>Stad</label>
    <input type="text" class="form-control" placeholder="Stad" name="city" required>
  </div>
    
      <div class="col-lg-3"></div>
    
    </div>
    <div class="row">
    
        <div class="col-lg-3"></div>
    
    <div class="form-group col-lg-3">
    <label>Telefon</label>
    <input type="text" class="form-control" placeholder="0701112233" name="phone" required>
  </div>
    
  <div class="form-group col-lg-3">
    <label>E-post</label>
    <input type="email" class="form-control" placeholder="E-post" name="email" required>
  </div>
        
    <div class="col-lg-3"></div>
        
    </div>   
    <div class="row">
        
    <div class="col-lg-3"></div>
        
    <div class="col-lg-6">
    <label>Användarnamn</label>
    <input type="text" class="form-control" placeholder="Användarnamn" name="username" required>
     </div>    
      <div class="col-lg-3"></div>
        
    </div>
    
    
    <div class="row">
   <div class="form-group col-lg-3"></div>
        
  <div class="form-group col-lg-3">
    <label>Lösenord</label>
    <input type="password" class="form-control" placeholder="Lösenord" name="password" required>
  </div>
  <div class="form-group col-lg-3">
    <label>Lösenord</label>
    <input type="password" class="form-control" placeholder="Lösenord" name="password2" required>
  </div>
     </div>   
      
    <div class="row">
        <div class="col-lg-8"></div>
  <div class="col-lg-1">
  <button type="submit" class="btn btn-default">Skicka</button>
  </div> 
        
    <div class="clo-lg-3"></div>
    </div>
    
    
    
</form>
    
</div>